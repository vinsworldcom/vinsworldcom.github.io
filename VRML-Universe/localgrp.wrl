# DiskGalaxy PROTO
PROTO DiskGalaxy [
    field SFVec3f GalaxyScale 1.0 1.0 1.0
]
{
Transform {
    scale IS GalaxyScale
    children [
        #Galactic Core
        Shape {
            appearance Appearance {
                material Material {
                    emissiveColor 0.4 0.4 0.4
                }
            }
            geometry Sphere {
                radius 0.125
            }
        }
        #Galactic Disc
        Transform {
            scale 1 0.025 1
            children [
                Shape {
                    appearance Appearance {
                        material Material {
                            emissiveColor 0.3 0.3 0.3
                            transparency 0.05
                        }
                     }
                     geometry Sphere {
                         radius 0.5
                     }
                }
            ]
        }
    ]
}
}

#Milky Way Galaxy
DEF MILKYWAY_TGT Transform {
    children [
        Anchor {
#            url "milkyway.html"
            description "Milky Way Galaxy"
#            parameter ["target=_blank"]
            children [
                DiskGalaxy {
                    GalaxyScale 1 1 1
                }
            ]
        }

        #Solar System
        Anchor {
            url "https://vinsworldcom.github.io/VRML-Universe/solarsys.wrl"
            description "Solar System"
            children [

                #Arrow (point)
                Transform {
                    translation -0.28 0.1002 0
                    rotation 1 0 0 3.14
                    children [
                        Shape {
                            appearance Appearance {
                                material Material {
                                    emissiveColor 1 0 0
                                }
                            }
                            geometry Cone {
                                bottomRadius 0.05
                                height 0.2
                            }
                        }
                    ]
                }
                #Arrow (shaft)
                Transform {
                    translation -0.28 0.3502 0
                    children [
                        Shape {
                            appearance Appearance {
                                material Material {
                                    emissiveColor 1 0 0
                                }
                            }
                            geometry Cylinder {
                                radius 0.01
                                height 0.5
                            }
                        }
                    ]
                }
            ]
        }
    ]
}


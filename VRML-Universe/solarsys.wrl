# Asteroid Belt Torus
PROTO AsteroidBelt [
    field SFColor BeltColor 0.5 0.5 0.5
    field SFFloat BeltTrans 0.5
]
{
Shape {
  appearance Appearance {
    material Material {
      emissiveColor IS BeltColor
      transparency IS BeltTrans
    }
  }
  geometry Extrusion {
    beginCap FALSE
    endCap FALSE
    convex FALSE
    creaseAngle 1.57
    crossSection [ 1.00 0.00 0.92 -0.38 0.71 -0.71 0.38 -0.92

                   0.00 -1.00 -0.38 -0.92 -0.71 -0.71 -0.92 -0.38

                   -1.00 0.00 -0.92 0.38 -0.71 0.71 -0.38 0.92

                   0.00 1.00 0.38 0.92 0.71 0.71 0.92 0.38 1.00 0.00
    ]
    spine [ 5 0 0, 4.875 0 -0.99, 4.75 0 -1.65, 4.5 0 -2.3,
            4 0 -3, 3 0 -4, 2.3 0 -4.5, 1.65 0 -4.75,
            0.99 0 -4.875, 0 0 -5,

            -0.99 0 -4.875, -1.65 0 -4.75, -2.3 0 -4.5,
            -3 0 -4, -4 0 -3, -4.5 0 -2.3, -4.75 0 -1.65,
            -4.875 0 -0.99, -5 0 0,

            -4.875 0 0.99, -4.75 0 1.65, -4.5 0 2.3, -4 0 3,
            -3 0 4, -2.3 0 4.5, -1.65 0 4.75, -0.99 0 4.875,
            0 0 5,

            0.99 0 4.875, 1.65 0 4.75, 2.3 0 4.5, 3 0 4, 4 0 3,
            4.5 0 2.3, 4.75 0 1.65, 4.875 0 0.99, 5 0 0
    ]
  }
}
}

